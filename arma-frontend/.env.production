# Arma Battles Chat - Production Environment Configuration
# https://chat.armabattles.com

# API Configuration
VITE_API_URL=https://chat.armabattles.com/api
VITE_WS_URL=wss://chat.armabattles.com/ws

# Application Branding
VITE_APP_TITLE=Arma Battles Chat
VITE_APP_NAME=Arma Battles
VITE_APP_DESCRIPTION=Official chat platform for the Arma Battles gaming community

# Color Theme
VITE_PRIMARY_COLOR=#4A90E2
VITE_SECONDARY_COLOR=#2C5F2D
VITE_ACCENT_COLOR=#E24A4A
VITE_BACKGROUND_COLOR=#1A1A1A

# OAuth Configuration
VITE_OAUTH_ENABLED=true
VITE_OAUTH_PROVIDER_NAME=Arma Battles
VITE_OAUTH_AUTHORIZE_URL=https://armabattles.com/oauth/authorize
VITE_OAUTH_TOKEN_URL=https://armabattles.com/oauth/token
VITE_OAUTH_USERINFO_URL=https://armabattles.com/oauth/user
VITE_OAUTH_CLIENT_ID=019c5d06-b3f3-709a-a212-b4441d609080
VITE_OAUTH_REDIRECT_URI=https://chat.armabattles.com/auth/callback
VITE_OAUTH_SCOPES=profile,email

# Links
VITE_MAIN_SITE_URL=https://armabattles.com
VITE_LOGO_URL=https://armabattles.com/images/logo.png

# Features
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_VOICE=false
VITE_ENABLE_VIDEO=false

# Analytics (optional)
# VITE_GA_TRACKING_ID=
# VITE_SENTRY_DSN=

# Build Configuration
VITE_BUILD_ENV=production
NODE_ENV=production
