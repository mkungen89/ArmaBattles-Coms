{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Debug Electron",
      "configurations": ["Debug Main Process", "Attach to Renderer Process"]
    }
  ]
}
